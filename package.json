{
    "name": "github-pusher",
    "displayName": "GitHub Pusher",
    "description": "Easily push repositories to GitHub directly from VSCode",
    "version": "0.1.0",
    "publisher": "cyrano21",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#3B4252",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cyrano21/vscode-github-pusher.git"
    },
    "homepage": "https://github.com/cyrano21/vscode-github-pusher/blob/main/README.md",
    "bugs": {
        "url": "https://github.com/cyrano21/vscode-github-pusher/issues"
    },
    "keywords": [
        "github",
        "repository",
        "push",
        "git",
        "vscode-extension"
    ],
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:githubPusher.pushRepository",
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "githubPusher.pushRepository",
                "title": "GitHub Pusher: Push Repository"
            }
        ],
        "configuration": {
            "title": "GitHub Pusher",
            "properties": {
                "githubPusher.githubToken": {
                    "type": "string",
                    "description": "GitHub Personal Access Token"
                },
                "githubPusher.defaultBranch": {
                    "type": "string",
                    "default": "main",
                    "description": "Default branch name for new repositories"
                },
                "githubPusher.privateRepo": {
                    "type": "boolean",
                    "default": true,
                    "description": "Default repository visibility"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "jest",
        "test:watch": "jest --watch",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.11",
        "@types/mocha": "^10.0.10",
        "@types/node": "^18.x",
        "@types/sinon": "^17.0.1",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "expect": "^29.7.0",
        "glob": "^11.0.0",
        "jest": "^29.7.0",
        "jest-mock": "^29.7.0",
        "mocha": "^11.0.1",
        "sinon": "^17.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "@octokit/rest": "^20.0.2",
        "simple-git": "^3.19.1"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/test/**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "setupFiles": [
            "<rootDir>/src/test/mocks/setup.js"
        ],
        "moduleNameMapper": {
            "^vscode$": "<rootDir>/src/test/mocks/vscode.ts"
        }
    }
}
